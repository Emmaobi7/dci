// Firestore Security Rules for DCI Platform
// Replace the content in Firebase Console > Firestore > Rules

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Courses collection - more permissive for development
    match /courses/{courseId} {
      // Anyone authenticated can read courses
      allow read: if request.auth != null;
      
      // Anyone authenticated can create courses (for testing)
      allow create: if request.auth != null;
      
      // Course owner or any authenticated user can update/delete (for testing)
      allow update, delete: if request.auth != null;
    }
    
    // Enrollments collection (for tracking student enrollments)
    match /enrollments/{enrollmentId} {
      allow read, write: if request.auth != null;
    }
    
    // For development - allow any authenticated user to read/write everything
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
